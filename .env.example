# 🔐 Configurações de Ambiente - Movie Rating ETL
# Copie este arquivo para .env e preencha com os valores reais

# 🗄️ Configurações do Banco de Dados PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dw
POSTGRES_USER=user
POSTGRES_PASSWORD=secret

# 🌐 Configurações da Aplicação Flask
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# 🐳 Configurações do Docker Hub (para CI/CD)
DOCKER_USERNAME=seu_usuario_dockerhub
DOCKER_PASSWORD=sua_senha_dockerhub

# 🔑 Configurações de Segurança
SECRET_KEY=sua_chave_secreta_super_segura_aqui

# 📊 Configurações do ETL
ETL_BATCH_SIZE=1000
ETL_LOG_LEVEL=INFO
ETL_DATA_PATH=/app/data

# 🌍 Configurações de Ambiente
ENVIRONMENT=production
LOG_LEVEL=INFO
TIMEZONE=America/Sao_Paulo

# 📧 Configurações de Notificação (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_app_gmail

# 🔍 Configurações de Monitoramento (opcional)
MONITORING_ENABLED=true
METRICS_PORT=9090

# 🚀 Configurações de Deploy
DOMAIN_NAME=seu-dominio.com
SSL_ENABLED=true

# 📈 Configurações de Performance
MAX_CONNECTIONS=100
POOL_SIZE=20
CACHE_TTL=3600

# Exemplo de string de conexão completa:
# postgresql://user:secret@localhost:5432/dw